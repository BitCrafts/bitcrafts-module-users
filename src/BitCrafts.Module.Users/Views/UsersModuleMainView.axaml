<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BitCrafts.Module.Users.Views.UsersModuleMainView">
    <Grid x:Name="RootGrid" ColumnDefinitions="Auto,*" Margin="0">
        <Grid Grid.Column="0" Margin="5">
            <ListBox Padding="0" Margin="0" x:Name="FeaturesListVox" SelectionMode="Single"
                     MinWidth="200" BorderBrush="Green"
                     SelectionChanged="FeaturesListVox_OnSelectionChanged">
            </ListBox>
        </Grid>
        <Grid Grid.Column="1" Margin="5">
            <Border Margin="0" Padding="0" BorderBrush="Green" BorderThickness="1">
                <ScrollContentPresenter x:Name="CurrentContent"></ScrollContentPresenter>
            </Border>
        </Grid>
    </Grid>
</UserControl>